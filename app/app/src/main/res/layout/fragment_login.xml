<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.LoginFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loginLottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/sign_in"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed=".6"
        app:lottie_progress=".7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LoginTitle"
        android:textAlignment="center"
        android:fontFamily="@font/noto_medium"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/loginLottieAnimationView"
        android:layout_marginTop="20dp"
        android:id="@+id/loginTitle"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LoginDesc"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:id="@+id/loginDesc"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:alpha="1"
        android:background="@drawable/light_theme_button"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Sign in with Google"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip Login"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:id="@+id/skiplogin"/>






</androidx.constraintlayout.widget.ConstraintLayout>
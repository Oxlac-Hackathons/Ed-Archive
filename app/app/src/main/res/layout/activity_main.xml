<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_background"
        android:hint="Search"
        android:imeOptions="actionSearch"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/settingsImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RecentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="32dp"
        android:text="Recent Archives"
        android:textSize="27sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="@id/searchBar"
        app:layout_constraintTop_toTopOf="@id/searchBar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecentTextView">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Add as many items as you want using a loop or dynamically -->

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 1" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 2" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 3" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 4" />

                <!-- More text views for additional items -->

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Add as many items as you want using a loop or dynamically -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="8dp">

                <!-- Item 1 -->
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 1"
                    android:padding="8dp"/>

                <!-- Item 2 -->
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 2"
                    android:padding="8dp"/>

                <!-- Item 3 -->
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 3"
                    android:padding="8dp"/>

                <!-- Item 4 -->
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:text="Arch 4"
                    android:padding="8dp"/>

            </GridLayout>

            <!-- More GridLayouts for additional rows of items -->

        </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
